/include/ "system-conf.dtsi"

/ {
    aliases {
        serial0 = &uart1;
        serial1 = &uart0;
    };

    chosen {
        bootargs= "console=ttyPS0,115200 root=/dev/mmcblk0p2 earlycon clk_ignore_unused earlyprintk rootfstype=ext4 rw rootwait cma=1024M";
        stdout-path = "serial0:115200n8";

  };
};

/* notes:
serdes: // PHY TYP see: dt-bindings/phy/phy.h
*/

/* default */

/* SD */

&sdhci0 {
	disable-wp;
	no-1-8-v;

};



/* USB  */


&dwc3_0 {
    status = "okay";
    dr_mode = "host";
    snps,usb3_lpm_capable;
    snps,dis_u3_susphy_quirk;
    snps,dis_u2_susphy_quirk;
    phy-names = "usb2-phy","usb3-phy";
    phys = <&lane1 4 0 2 100000000>;
    maximum-speed = "super-speed";
};

/* ETH PHY */

&gem3 {
	phy-handle = <&phy0>;
	phy0: phy0@1 {
		device_type = "ethernet-phy";
		reg = <1>;
	};
};

/* QSPI */

&qspi {
    #address-cells = <1>;
    #size-cells = <0>;
    status = "okay";
    flash0: flash@0 {
        compatible = "jedec,spi-nor";
        reg = <0x0>;
        #address-cells = <1>;
        #size-cells = <1>;
    };
};

/* I2C */

&i2c0 {
    i2c@4 { //Module PLL Si5338 or SI5345
        #address-cells = <1>;
        #size-cells = <0>;
        reg = <4>;
    };
};


